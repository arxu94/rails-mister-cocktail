<h1><strong>What's your favorite cocktail?</strong></h1>

<%= simple_form_for(@cocktail)do |f| %>
  <div class="form-inputs" style="font-family: 'Arimo', sans-serif">
    <%= f.input :name %>
    <%= f.input :photo, as: :file %>

  </div>

<%= f.submit "Add this cocktail", class: "btn btn-primary" %>
  <% end %>

  <br>
<button class="btn">
  <%= link_to "Back to all cocktails", cocktails_path %>
</button>
</div>

