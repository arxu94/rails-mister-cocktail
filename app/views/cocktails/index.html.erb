<div class="banner" style="background-image: url('<%= image_path 'cocktails-banner.jpg' %>');">
  <h1><strong>Cockamamie Cocktails🍸🍻</strong></h1>
  <p>Here are everyone's favorite drinks...</p>
</div>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card-white" style="background-image: url('cocktails-banner.jpg');">
        <h2><strong><%= link_to cocktail.name, cocktail_path(id: cocktail.id)%></strong></h2>
        </div>
      </div>
    <% end%>
    <div class="col-12 col-md-6 col-lg-3">
      <div class="card-white" style="background-color: #3a4750">
        <h3><%= link_to "Add new cocktail", new_cocktail_path %></h3>
      </div>
    </div>
  </div>
</div>




